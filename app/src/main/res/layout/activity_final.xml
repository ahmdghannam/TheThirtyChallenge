<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.startEnd.FinalActivity"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/tv_congrates"
        app:layout_constraintVertical_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="congratulations name for winning"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_winner"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_result"
        app:layout_constraintVertical_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:text="result : 4:5"
        android:gravity="center"
        android:textColor="@color/main_text_color"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_total_matches"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_congrates" />

    <TextView
        android:id="@+id/tv_total_matches"
        app:layout_constraintVertical_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="total maches played : 9"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_result" />

    <ImageView
        android:id="@+id/iv_winner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="3"
        android:src="@drawable/winner"
        app:layout_constraintBottom_toTopOf="@+id/tv_congrates"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="36dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>